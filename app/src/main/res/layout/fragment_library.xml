<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.thaariq.MusicPlayerApp.ui.LibraryFragment"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/recites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:fontFamily="@font/sf_pro_bold"
            android:text="Recites" />

        <TextView
            android:id="@+id/lectures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/recites"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:textColor="#50ffffff"
            android:textSize="27sp"
            android:fontFamily="@font/sf_pro_bold"
            android:text="Lectures" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/recites"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="16dp"
                    app:cardBackgroundColor="#222">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_plus" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Create Playlist"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/sf_pro_bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="16dp"
                    app:cardBackgroundColor="@color/blue" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="My Playlist #1"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/sf_pro_bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="16dp"
                    app:cardBackgroundColor="@color/yellow" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="My Playlist #2"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/sf_pro_bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="16dp"
                    app:cardBackgroundColor="@color/teal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="My Playlist #3"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/sf_pro_bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="16dp"
                    app:cardBackgroundColor="@color/lightBlue" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="My Playlist #4"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/sf_pro_bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="16dp"
                    app:cardBackgroundColor="@color/green3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="My Playlist #5"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/sf_pro_bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="16dp"
                    app:cardBackgroundColor="@color/lightGreen" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="My Playlist #6"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/sf_pro_bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="16dp"
                    app:cardBackgroundColor="@color/brown" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="My Playlist #7"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/sf_pro_bold"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>